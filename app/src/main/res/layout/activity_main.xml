<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="393dp"
        android:layout_height="674dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="348dp"
                android:layout_height="157dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/contacto"
                tools:srcCompat="@drawable/contacto" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="355dp"
                android:layout_height="58dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btntomarfotos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#8BC34A"
                    android:text="Tomar Fotos" />

                <Button
                    android:id="@+id/btnselecfotos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Selec. Foto" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnmaspaises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_input_add" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:text="PAIS"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerpaises"
                android:layout_width="329dp"
                android:layout_height="42dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/purple_500"
                android:backgroundTint="@color/purple_500"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:text="NOMBRE"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/teal_200"
                android:ems="10"
                android:hint="Escriba su nombre"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:text="TELEFONO"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txttelefono"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/teal_200"
                android:ems="10"
                android:hint="Escriba su numero de telefono"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:text="NOTA"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtnota"
                android:layout_width="329dp"
                android:layout_height="92dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                android:background="@color/teal_200"
                android:ems="10"
                android:hint="Escriba una nota"
                android:inputType="textPersonName"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btncontactossalvados"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="64dp"
                android:layout_marginBottom="10dp"
                android:text="CONTACTOS SALVADOS" />

            <Button
                android:id="@+id/btnsalvarcontactos"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#8BC34A"
                android:text="SALVAR CONTACTOS" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>